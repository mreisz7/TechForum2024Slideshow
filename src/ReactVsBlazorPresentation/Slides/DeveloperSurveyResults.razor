@inherits SlideBase

<div class="full-screen">
    <header class="slide-header">
        <h1 class="slide-title">Stack Overflow Developer Survey 2023 Results</h1>
    </header>
    <div class="slide-content column">
        <a href="https://survey.stackoverflow.co/2023/#section-most-popular-technologies-web-frameworks-and-technologies" target="_blank" class=@ShowSlideStopElement(1)>
            <img src="img/DeveloperSurveyFrameworkUsage.png" alt="Developer Survey 2023 Framework Usage" class="dev-survey-image" />
        </a>
        <a href="https://survey.stackoverflow.co/2023/#section-admired-and-desired-web-frameworks-and-technologies" target="_blank" class=@ShowSlideStopElement(2)>
            <img src="img/DeveloperSurveyFrameworkDesiredAdmired.png" alt="Developer Survey 2023 Framework Desired/Admired" class="dev-survey-image" />
        </a>
    </div>
</div>

@code {
    public override int SlideStopMax { get; set; } = 2;
}