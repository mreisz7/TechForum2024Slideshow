@inherits SlideBase

<div class="full-screen">
    <header class="slide-header">
        <h1 class="slide-title">Comparison: Components</h1>
        <img class="logo" src="img/react-logo.png" />
        <img class="logo" src="img/blazor-logo.png" />
    </header>
    <div class="slide-content split">
        <div class="split-left">
            <h2>React:</h2>
            <CodeBlock FileName="button.jsx" Class=@ShowSlideStopElement(1)>
                @CodeStrings.buttonJsx
            </CodeBlock>
        </div>
        <div class="split-right">
            <h2>Blazor:</h2>
            <CodeBlock FileName="Button.razor" Class=@ShowSlideStopElement(2)>
                @CodeStrings.buttonRazor
            </CodeBlock>
        </div>
    </div>
</div>


@code {
    public override int SlideStopMax { get; set; } = 2;
}